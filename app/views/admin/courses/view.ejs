      </div>
    </div>
  </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Subjects</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body overflow-auto">
      <!-- Form here -->
      <form action="/admin/courses/<%= course.uuid %>/add-subjects" method="POST">
        <div class="overflow-auto">
          
        </div>
        <ul class="list-group mb-4">
          <% subjects.forEach((subject, index) => { %>
            <li class="list-group-item">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="<%=subject.uuid%>" name="subject<%=index%>"id="<%=subject.uuid%>">
                <label class="form-check-label" for="<%=index%>">
                  <%=subject.subCode%> (<%=subject.description%>)
                </label>
              </div>
            </li>
          <% }) %>

        </ul>
        <input type="submit" value="Submit" class="btn btn-primary">
        
      </form>
      
      </div>
    </div>
  </div>
</div>

<%- include('includes/admin/_footer') %>

